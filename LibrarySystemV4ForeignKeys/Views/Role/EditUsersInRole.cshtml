@using LibrarySystemV4ForeignKeys.ViewModels
@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container" data-aos="zoom-out" data-aos-delay="100">
        <h1>Edit Users In <span>Role</span></h1>
        <h2>Here you can edit the users in the role</h2>
        <div class="d-flex">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <h2>Add or remove users from this @ViewBag.RoleName</h2>
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />


                                <label class="form-check-label text-black-50" asp-for="@Model[i].IsSelected">
                                    @Model[i].UserName
                                </label>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-primary"
                               style="width:auto" />
                        <a asp-action="EditRole" asp-route-id="@roleId"
                           class="btn btn-primary" style="width:auto">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section><!-- End Hero -->



